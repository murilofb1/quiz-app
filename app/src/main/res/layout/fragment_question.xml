<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/questions"
        android:textSize="16sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_gp_alternatives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_alternative_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Alternativa 1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_alternative_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternativa 2" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_alternative_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Alternativa 3" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_alternative_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternativa 4" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio_alternative_5"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alternativa 5" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Responder" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layout_correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sua resposta estÃ¡..."
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtViewAnswerIs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtViewCorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>